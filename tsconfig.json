{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,

    "jsx": "react",
    "declaration": true,
    "declarationMap": true,

    "outDir": "./dist",

    "strict": true,

    "moduleResolution": "node",
    "baseUrl": "src",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src"]
}
